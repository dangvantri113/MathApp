<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mycompany.mathapp.TriangleActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="140dp"
            android:src="@drawable/img_triangle1"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="140dp"
            android:src="@drawable/img_triangle2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="140dp"
            android:src="@drawable/img_triangle3"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="140dp"
            android:src="@drawable/img_triangle4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="140dp"
            android:src="@drawable/img_triangle5"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="140dp"
            android:src="@drawable/img_triangle6"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HÌNH ẢNH VỀ HÌNH TAM GIÁC"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:textSize="20dp"/>


</LinearLayout>
